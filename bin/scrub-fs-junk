#!/bin/bash

dryrun=1
if [[ "-ok" == "$1" ]]; then
    dryrun=0
    shift 1
fi

dirs=( "${@}" )
if [[ "0" == "${#}" ]]; then
    dirs=( "." )
fi

scrub=(
    ".AppleDB"
    ".AppleDesktop"
    ".AppleDouble"
    ".DS_Store"
    "__MACOSX"
    "Network Trash Folder"
    "Temporary Items"
    )

find_args=( "-xdev" "-depth" "-ignore_readdir_race" "(" )
first_arg=1
for s in "${scrub[@]}" ; do
    if [[ $first_arg == 1 ]]; then
        first_arg=0
    else
        find_args+=( "-o" )
    fi

    find_args+=( "-name" "$s" )
done

find_args+=( ")" "-print0" )

for d in "${dirs[@]}" ; do
    find_command=( "find" "$d" "${find_args[@]}" )
    if [[ "1" == "$dryrun" ]]; then
        echo "In dry-run mode. Put -ok as the first parameter to actually delete"
        xargs_command=( "xargs" "-L" "1" "-0" "echo" "Would remove: " )
    else
        xargs_command=( "xargs" "-L" "1" "-0" "rm" "-rvf" )
    fi
    echo "${find_command[@]}" '|' "${xargs_command[@]}" ';' echo 'Exit code: $?'
    "${find_command[@]}" | "${xargs_command[@]}" ; echo "Exit code: $?"
done
